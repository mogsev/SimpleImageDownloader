<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radius_dp_2"
    app:cardElevation="@dimen/elevation_dp_4"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorTileBackground"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_dp_8"
        android:paddingLeft="@dimen/padding_dp_16"
        android:paddingRight="@dimen/padding_dp_16"
        android:paddingTop="@dimen/padding_dp_8">

        <TextView
            android:id="@+id/text_name"
            style="@style/TextWhiteMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_time"
            style="@style/TextWhiteSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_dp_8" />

    </LinearLayout>

</android.support.v7.widget.CardView>
